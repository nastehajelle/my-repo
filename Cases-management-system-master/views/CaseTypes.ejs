<%- include('Dashboard') %>
<link rel="stylesheet" href="/vendors/datatables.net-bs5/dataTables.bootstrap5.css">

<div class="page-content">
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
    Add Case type
  </button>

  <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="staticBackdropLabel">Case Type</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/AddCaseTypes" method="post">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Case Nmae</label>
              <input required type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="FullName">
              <!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> -->
            </div>
        
            <div class="mb-3">
                <label for="tArea" class="form-label"></label>
                <textarea name="Issue" id="tArea" style="width: 100%; padding: 10PX 15PX; " placeholder="Enter Issue" rows="6"></textarea>
            </div>

      </div>



        <div style="text-align: end;" class="mb-3 px-3">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Submit</button>

        </div>
        </form>
      </div>
      <!-- <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Understood</button>
      </div> -->
    </div>
  </div>

  <div class="row px-1 mt-4">
    <div class="col-md-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h6 class="card-title">officer lists</h6>
  
          <div class="table-responsive">
            <table id="dataTableExample" class="table">
              <thead>
                <tr>
                  <th>Case types</th>
                  <th>Description</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% caseType.forEach(procecutor => { %>
                <tr>                
                  <td><%= procecutor.casseType %></td>
                  <td><%= procecutor.Description %></td>
                  <td>
                    <button type="button" onclick="edit(`<%= procecutor._id %>`, `<%= procecutor.casseType %>`, `<%= procecutor.Description %>` )" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal" style="border: none;border-radius: 4px; font-size: 15px;padding: 4px 8px;"><i class="fa-regular fa-pen-to-square"></i></button>&nbsp;
                    <a href="/DeleteCaseType/<%= procecutor._id  %>" class="bg-danger text-light" style="border: none;border-radius: 4px; font-size: 15px;padding: 7px 10px;">
                      <i class="fa-regular fa-trash-can"></i></button>
                  </td>
  
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Button trigger modal -->
  <!-- <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
  </button> -->
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/EditCaseType" method="post">
            <input required type="hidden" id="_id" name="id">
            <div class="mb-3">
                <label for="FullName" class="form-label">Case type</label>
                <input required type="text" class="form-control" id="FullName" name="casseType">
            </div>
            <div class="mb-3">
                <label for="tArea" class="form-label"></label>
                <textarea name="Description" id="tAreaEdit" style="width: 100%; padding: 10PX 15PX; " placeholder="Enter Issue" rows="6"></textarea>
            </div>
            <div style="text-align: end;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
        
      </div>
  
    </div>
  </div>
  </div>
  <%- include('footer') %>
  
  <script>
  function edit(_id, FullName, Sex, Phone, station_Id) {  
  
      console.log("Officer ID:", _id);
      console.log("Officer Name:", FullName);
      console.log("Officer sex:", Sex);
      console.log("Officer ph:", Phone);
      console.log("Officer Station ID:", station_Id);
  
      $('#_id').val(_id);
      $('#FullName').val(FullName);
      $('#tAreaEdit').val(Sex);
      // Station not found buu leeyahy hadii la daabacana waa soo daabacaa
      $('#editModal').modal('show');
  
  }
  
    
  </script>
  <!-- Plugin js for this page -->
  <script src="/vendors/datatables.net/jquery.dataTables.js"></script>
  <script src="/vendors/datatables.net-bs5/dataTables.bootstrap5.js"></script>
  <!-- End plugin js for this page -->
  <script src="/js/data-table.js"></script>
  </div>
  
  
</div>





